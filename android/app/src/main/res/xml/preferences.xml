<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">
    <PreferenceCategory
        android:title="Verbindungen">
        <EditTextPreference
            android:dialogTitle="MAC Adresse des Controllers"
            android:key="pref_mac_address"
            android:title="Raspberry MAC"
            android:defaultValue="B8:27:EB:C8:56:C7"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:dialogTitle="Name des Controllers"
            android:key="pref_raspi_name"
            android:title="Raspberry Name"
            android:defaultValue="raspberrypi"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:dialogTitle="UUID der Verbindung"
            android:key="pref_uuid"
            android:title="UUID"
            android:defaultValue="1e0ca4ea-299d-4335-93eb-27fcfe7fa849"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Eingänge">
        <Preference
            android:title="Messleitungen"
            android:summary="Einstellungen der Inputs (IN 1 bis IN 5)"
            android:fragment="com.bjorn.vanctrl.Fragments.SettingsInputSpecFragment"
            android:label="skjdbfksd"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Oberfläche">
        <Preference
            android:title="Übersicht"
            android:summary="Auswahl der Elemente auf der Übersichtsseite"
            android:fragment="com.bjorn.vanctrl.Fragments.SettingsOverviewFragment"
            android:label="skjdbfksd"/>
    </PreferenceCategory>


</androidx.preference.PreferenceScreen>