<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".LightSwitch">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Switch
                android:text="@string/front_light_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frontLightSwitch" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp" android:layout_marginTop="188dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Switch
                android:text="@string/back_light_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backLightSwitch"
                app:layout_constraintTop_toBottomOf="@+id/frontLightSwitch" android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>