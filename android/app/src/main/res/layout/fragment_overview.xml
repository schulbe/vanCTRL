<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.OverviewFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/overview_battery_title"
                    android:layout_width="match_parent"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:layout_height="40dp" android:id="@+id/textView" android:textSize="18sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/batteryVoltageView"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>